{
  "name": "prefab-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "src/apps/*",
    "src/api",
    "src/shared"
  ],
  "scripts": {
    "dev:design": "cd src/apps/design && npm run dev",
    "dev:marketplace": "cd src/apps/marketplace && npm run dev",
    "dev:api": "cd src/api && npm run dev",
    "build:design": "cd src/apps/design && npm run build",
    "build:marketplace": "cd src/apps/marketplace && npm run build",
    "build:api": "cd src/api && npm run build",
    "start:design": "cd src/apps/design && npm start",
    "start:marketplace": "cd src/apps/marketplace && npm start",
    "start:api": "cd src/api && npm start"
  },
  "engines": {
    "node": "18.x",
    "npm": "10.x"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
