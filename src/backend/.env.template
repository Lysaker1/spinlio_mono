# .env.template

# ───────────────────────────────────────────────────────────
# Database & Supabase Configuration
# ───────────────────────────────────────────────────────────

DB_USER=YOUR_DB_USER
DB_HOST=YOUR_DB_HOST.supabase.co
DB_NAME=YOUR_DB_NAME
DB_PASSWORD=YOUR_DB_PASSWORD
DB_PORT=5432

SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# ───────────────────────────────────────────────────────────
# Server Configuration
# ───────────────────────────────────────────────────────────

PORT=3003
AUTH0_AUDIENCE=http://localhost:3003
AUTH0_ISSUER_BASE_URL=https://auth.spinlio.com
AUTH0_DOMAIN=auth.spinlio.com
API_URL=http://localhost:3003

STRIPE_PUBLIC_KEY=YOUR_STRIPE_PUBLIC_KEY
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY
FRONTEND_URL=http://localhost:3001

# ───────────────────────────────────────────────────────────
# AWS & S3 Configuration
# ───────────────────────────────────────────────────────────

AWS_ACCESS_KEY_ID= YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY= YOUR_AWS_SECRET_ACCESS_KEY
AWS_REGION= YOUR_AWS_REGION
BUCKET_NAME= YOUR_BUCKET_NAME

# ───────────────────────────────────────────────────────────
# Rhino Compute Configuration (REQUIRED)
# ───────────────────────────────────────────────────────────

# CRITICAL: These variables are REQUIRED for the API to function!
# The backend server will crash without these variables being set.
RHINO_COMPUTE_ENDPOINT=http://13.53.137.42:80
RHINO_COMPUTE_KEY=YOUR_RHINO_COMPUTE_KEY

# Frontend can use these variations
REACT_APP_RHINO_COMPUTE_URL=http://13.53.137.42:80
REACT_APP_RHINO_COMPUTE_KEY=YOUR_RHINO_COMPUTE_KEY