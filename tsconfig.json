{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@marketplace/*": ["./src/*"],
      "@shared/*": ["../../shared/*"]
    },
    "typeRoots": [
      "./node_modules/@types", 
      "../../node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.css",
    "../../shared/**/*.ts",
    "../../shared/**/*.tsx",
    "../../shared/**/*.css"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 